<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ssafy.enjoytrip.board.model.mapper.BoardMapper">
	<insert id="insertBoard" parameterType="board">
		insert into board (title, member_id, content, hit)
		values (#{title}, #{memberId}, #{content}, #{hit})
	</insert>
	
	<resultMap type="board" id="boardMap">
		<result column="no" property="no"/>
		<result column="title" property="title"/>
		<result column="member_id" property="memberId"/>
		<result column="content" property="content"/>
		<result column="hit" property="hit"/>
		<result column="register_time" property="registerTime"/>
	</resultMap>
	
	<select id="selectBoard" resultMap="boardMap">
		select no, title, member_id, hit, register_time
		from board
		order by no desc
	</select>
	
	<select id="selectBoardOne" resultMap="boardMap" parameterType="int">
		select no, title, member_id, hit, register_time
		from board
		 where no = #{no}
	</select>
	
	
	
	<delete id="deleteBoard">
		delete
		from board
		where no = #{no}
	</delete>
	
	<update id="updateBoard" parameterType="board">
		update board
		set
		title = #{title},
		content = #{content}
		where no = #{no}
	</update>
	

</mapper>


